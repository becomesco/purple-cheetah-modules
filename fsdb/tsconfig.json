{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "declarationMap": false,
    "sourceMap": false,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "strict": true,
    "target": "ES2020",
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "importsNotUsedAsValues": "error"
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist", "public"],
  "typedocOptions": {
    "entryPoints": ["src"],
    "name": "Purple Cheetah | FSDB",
    "theme": "./node_modules/typedoc-neo-theme/bin/default",
    "out": "doc",
    "outline": [
      {
        "createFSDB": "modules/main",
        "useFSDB": "modules/main",
        "deleteFSDB": "modules/main",
        "createFSDBRepository": "modules/repository",
        "useFSDBRepository": "modules/repository"
      }
    ]
  }
}
