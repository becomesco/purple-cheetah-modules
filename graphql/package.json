  },
  "homepage": "https://github.com/becomesco/purple-cheetah-modules",
  "dependencies": {
    "express-graphql": "^0.12.0",
    "graphql": "^15.5.0"
  },
  "peerDependencies": {
    "@becomes/purple-cheetah": ">=3.5.4"
  },
  "devDependencies": {
    "@banez/fs": "^1.0.3",
    "@banez/npm-tool": "^1.1.1",
    "@becomes/purple-cheetah": "^3.5.4",
