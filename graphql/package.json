    "@types/node": "^15.6.2",
    "@typescript-eslint/eslint-plugin": "^4.26.0",
    "@typescript-eslint/parser": "^4.26.0",
    "chai": "^4.3.7",
    "eslint": "^7.27.0",
    "fs-extra": "^10.0.0",
    "mocha": "^10.1.0",
    "nodemon": "^2.0.20",
    "prettier": "^2.2.1",
    "ts-node": "^8.10.2",
    "tsconfig-paths": "^3.9.0",
    "typescript": "^4.4.4"
  },
